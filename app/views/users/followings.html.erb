<div class='row'>
  <div class='col-md-12'>
    <h2>Follow Users</h2>
    <table class = "table">
      <% if @user.followings.count == 0 %>
        <td>ユーザーはいません</td>
      <% else %>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @user.followings.each do |follow| %>
            <tr>
              <td>
                <%= attachment_image_tag follow, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size:"50x50" %>
              </td>
              <td>
                <%= follow.name %>
              </td>
              <td>
                フォロー数: <%= follow.followings.count %>
              </td>
              <td>
                フォロワー数: <%= follow.followers.count %>
              </td>
              <td>
                <%= link_to 'Show', user_path(follow), class: "user_#{follow.id}" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      <% end %>
    </table>
  </div>
</div