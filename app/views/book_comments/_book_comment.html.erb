<table class = "table">
  <% books.book_comments.each do |book_comment| %>
    <tr>
      <td>
          <%= attachment_image_tag book_comment.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size:"50x50" %><br>
          <%= link_to user_path(book_comment.user) do %>
            <%= book_comment.user.name %>
          <% end %>
      </td>
      <td>
        <%= book_comment.comment %>
      </td>
      <% if book_comment.user_id == current_user.id %>
        <td>
          <%= link_to "Destroy", book_book_comment_path(book_comment.book,book_comment), method: :delete, class:"btn btn-sm btn-danger", remote: true %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>