<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info',user:@user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
  		    <td><%= link_to user_path(@books.user) do %>
            <%= attachment_image_tag @books.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size:"50x50" %><br>
            <%= @books.user.name %>
            <% end %>
          </td>
          <td><%= link_to @books.title, book_path(@books) %></td>
          <td><%= @books.body %></td>
          <% if @books.user_id == current_user.id %>
            <td><%= link_to 'Edit', edit_book_path(@books), class: "btn btn-sm btn-success edit_book_#{@books.id}" %></td>
            <td><%= link_to 'Destroy', book_path(@books), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
          <% end %>
        </tr>
      </table>
      <table class = "table">
        <% @books.book_comments.each do |book_comment| %>
          <tr>
            <td>
              <tr>
                <%= attachment_image_tag book_comment.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size:"50x50" %>
              </tr>
              <tr>
                <%= link_to user_path(book_comment.user) do %>
                  <%= book_comment.user.name %>
                <% end %>
              </tr>
            </td>
            <td>
              <%= book_comment.comment %>
            </td>
            <% if book_comment.user_id == current_user.id %>
              <td>
                <%= link_to "Destroy", book_comment_path(book_comment.id), class:"btn btn-sm btn-danger" %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>